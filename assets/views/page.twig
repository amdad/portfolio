{% extends "tmpl/layout.twig" %}

{% block content %}
<div class="container-fluid content" data-img="{{ data.img }}" data-color="{{ data.color }}">
	<div class="row">
		<div class="col-lg-12">
    		<hgroup>
    			<h1>{{ data.Title }}</h1>
    			<h2 class="subheading">{{ data.Subtitle|raw }}</h2>
			</hgroup>
		</div>
	</div>
	{{ data.content|raw }}
	
	<div class="row slider" id="twitter">
		<h2 class="">Latest Tweets:</h2>
		<ul>
			{% for status in twitter %}
				<li>
					<span class="txt subheading col-lg-12">{{ status.text|clickable|raw }}</span>
					<span class="details col-lg-12">
						<a href="https://twitter.com/intent/tweet?in_reply_to={{ status.id }}" target="_blank">
							<i class="fa fa-reply"></i>
						</a>
						<a href="https://twitter.com/intent/retweet?tweet_id={{ status.id }}" target="_blank">
							<i class="fa fa-retweet"></i>
						</a>
						<a href="https://twitter.com/intent/favorite?tweet_id={{ status.id }}" target="_blank">
							<i class="fa fa-star"></i>
						</a>
						<abbr class="date" title="{{ status.created_at }}">
							{{ status.created_at|date("d/m/Y H:m") }}
						</abbr>
					</span>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="row">
		<h2 class="subheading">If you want to get in touch, just drop your email address and i'll contact you ASAP!</h2>
		<div class="contact">
			{{ 'Contact me'|form }}
    			<input type="email" name="email">
    			<input type="submit" value="Contact me">
			</form>
    	</div>
	</div>
	
</div>
{% endblock %}